<%= form_for(@mail_merge) do |f| %>
  <% if @mail_merge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mail_merge.errors.count, "error") %> prohibited this mail_merge from being saved:</h2>

      <ul>
      <% @mail_merge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :data %>

  <div class="field">
    <%= f.label :from %>
    <%= f.text_field :from, :placeholder => '"Your Name" <you@example.com>' %>
  </div>
  <div class="field">
    <%= f.label :subject_template, "Subject template (Mustache)" %>
    <%= f.text_field :subject_template, :placeholder => "Hi {{name}}" %>
  </div>
  <div class="field">
    <%= f.label :body_template, "Body template (HTML + Mustache)" %>
    <%= f.text_area :body_template, :placeholder => "Hi {{name}}, Great to see you!" %>
  </div>
  <div class="actions">
    <%= f.submit "Send mail now", :class => "button", :confirm => "Send all the emails now?" %>
  </div>
<% end %>
